.header
	display block
	&__in
		@extends .in
		clearfix()
	&__left
		float left
	&__logo
		margin-top 15px
	&__right
		float right
		width 620px
		clearfix()
	&__nav
		margin-top 46px
		float left
	&__contacts
		margin-top 34px


.logo
	display block
	hide-text()
	retinaSprite($logo_group)

.nav
	&__list
		font-size 0
	&__item
		margin-left 15px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
	&__link,
	a
		font-size 14px
		text-decoration none
		color #FFF

.contacts
	text-align right
	color #FFF
	&__phone
		font-family $pnB
		font-size 24px
		text-decoration none
		letter-spacing tracking(20)
		color inherit
	&__address
		font-size 14px

