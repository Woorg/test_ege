.map
	position relative
	display block
	padding-top 170px
	padding-bottom 30.052%
	&__in
		@extends .in
	&__w
		z-index 1
		padding-top 20px
		padding-bottom 20px
		padding-left 60px
		padding-right 60px
		width 712px
		height 250px
		background #FFF
		color #000
		text-align center
		vcenter()
		top calc(50% + 50px)
		border-radius 8px
		box-shadow 0 0 70px 1px rgba(0,0,0, 24%)
	&__title
		margin-bottom 20px
		font-family $pnB
		font-size 40px
	&__text
		margin-bottom 10px
		font-family $pnR
		font-size 18px
		span
			font-family $pnB
	&__address
		margin-bottom 10px
		color #38D231
	// &__note

	&__area
		position absolute
		top 0
		left 0
		right 0
		bottom 0
